@{
                /**/

                ViewBag.Title = "Ver perfil";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home", new { Area = "" })">Inicio</a>
            </li>
            <li>
                <a>Seguridad</a>
            </li>
            <li class="active">
                <strong>Perfil</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Perfil de usuario <small></small></h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-4 col-md-6 col-sm-5 col-xs-12">
                            <div class="form-group">
                                <label>Perfil de usuario</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtPerfil" />
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-7 col-xs-12">
                            <div class="form-group">
                                <label>Nombre del usuario</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtNombre" />
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label>Empresa</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtEmpresa" />
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label>Correo electrónico</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtCorreo" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".ctrlInput").jqxInput({ disabled: true });
        });
    </script>
}