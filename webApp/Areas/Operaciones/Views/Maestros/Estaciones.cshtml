@{
    ViewBag.Title = "Estaciones";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home", new { Area = "" })">Inicio</a>
            </li>
            <li>
                <a>Operaciones</a>
            </li>
            <li class="active">
                <strong>Estaciones</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Catálogo de estaciones <small></small></h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <p>
                                <button class="btn btn-white" type="button"><i class="fa fa-ban"></i>&nbsp;&nbsp;Cancelar</button>
                                <button class="btn btn-primary" type="button"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar cambios</button>
                            </p>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                            <div class="form-group">
                                <label>Alias</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtAlias" />
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-7 col-sm-9 col-xs-12">
                            <div class="form-group">
                                <label>Nombre de la estación</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtNombre" />
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-12">
                            <div class="form-group">
                                <label>¿Activado?</label>
                                <div id="chkEstado" class="ctrlCheckbox">&nbsp;[Si / No]</div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-9 col-xs-12">
                            <div class="form-group">
                                <label>Ubicacion en Google Maps</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtUbicacion" />
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-9 col-xs-12">
                            <div class="form-group">
                                <label>Clientes que operan en la estación</label>
                                <div id="lstClientes" class="ctrlListBoxCheck"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>