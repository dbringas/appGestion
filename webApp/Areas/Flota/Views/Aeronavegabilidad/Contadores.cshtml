@{
    ViewBag.Title = "Contadores";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home", new { Area = "" })">Inicio</a>
            </li>
            <li>
                <a>Flota</a>
            </li>
            <li class="active">
                <strong>Contadores</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Contadores y propiedades <small></small></h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <p>
                                <button class="btn btn-white" type="button"><i class="fa fa-ban"></i>&nbsp;&nbsp;Cancelar</button>
                                <button class="btn btn-primary" type="button"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar cambios</button>
                            </p>
                        </div>
                        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                            <div class="form-group">
                                <label>Tipo</label>
                                <div id="cboTipo" class="ctrlDropDown"></div>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-6 col-sm-5 col-xs-12">
                            <div class="form-group">
                                <label>Alias</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtAlias" />
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-12">
                            <div class="form-group">
                                <label>¿Activado?</label>
                                <div id="chkEstado" class="ctrlCheckbox">&nbsp;[Si / No]</div>
                            </div>
                        </div>
                        <div class="col-lg-10 col-md-9 col-sm-8 col-xs-12">
                            <div class="form-group">
                                <label>Nombre del contador o propiedad</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtNombre" />
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                            <div class="form-group">
                                <label>Unidad de medida</label>
                                <div id="cboUnidad" class="ctrlDropDown"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Valores predeterminados <small></small></h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label>Valor inicial</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtValorInicial" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label>Valor máximo</label>
                                <input type="text" placeholder="" class="ctrlInput" id="txtValorMaximo" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Alertas <small>Configuración del semáforo</small></h5>
                    <div class="ibox-tools">
                        <span class="label label-primary pull-right">Verde</span>
                        <span class="label label-warning-light pull-right">Ambar</span>
                        <span class="label label-danger pull-right">Rojo</span>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group has-error">
                                <label class="control-label">Rojo [valor menor o igual a ...]</label>
                                <input type="text" placeholder="" class="ctrlInput form-control" id="txtRojo" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group has-warning">
                                <label class="control-label">Ambar [valor menor o igual a ...]</label>
                                <input type="text" placeholder="" class="ctrlInput form-control" id="txtAmbar" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>